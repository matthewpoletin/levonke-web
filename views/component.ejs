<!DOCTYPE html>
<html>
    <head>
        <%- include('head', {}); %>
    </head>
    <body>
        <%- include('header', {}); %>
        <div class="content">
            <% if (component) { %>
            <div class="component">
                <div class="pure-g">
                    <div class="pure-u-1-3">
                        <img width="80px" height="80px">
                    </div>
                    <div class="pure-u-2-3">
                        <div>
                            <h2><%= component.manufacturerPartNumber %></h2>
                        </div>
                        <% if (typeof manufacturer !== 'undefined') { %>

                            <div class="pure-g" style="max-width:100px;">
                                <div class="pure-u-1-3">
                                    <a href="/manufacturer/<%= manufacturer.id %>"><img width="20px" height="20px"></a>
                                </div>
                                <div class="pure-u-2-3">
                                    <a href="/manufacturer/<%= manufacturer.id %>"><%= manufacturer.name%></a>
                                </div>
                            </div>

                        <% } %>
                    </div>
                </div>

                <% if (pageType.toLowerCase() === "settings".toLowerCase()) { %>
                <div class="settings">
                    <form class="pure-form pure-form-stacked" accept-charset="UTF-8" method="post" action="/componenent/<%=component.uuid%>">
                        <fieldset>
                            <legend>Settings</legend>

                            <label for="manufacturerPartNumber">Manufacturer Part Number</label>
                            <input class="pure-input-1" name="manufacturerPartNumber" id="manufacturerPartNumber" type="text" placeholder="Name" value="<%=component.manufacturerPartNumber%>" required>
                            <span class="pure-form-message">This is a required field.</span>

                            <!--TODO: add padding in css-->
                            <br><br>
                            <button type="submit" id="submit" class="pure-button pure-input-1 pure-button-primary" disabled>Save</button>
                        </fieldset>
                    </form>
                </div>
                <script src="/js/component.js"></script>
                <% } %>

            </div>
            <% } %>
        </div>
        <%- include('footer', {}); %>
    </body>
</html>
